<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/mLlayoutBottomButtons"
    android:orientation="vertical"
    tools:context="com.brianstacks.sportsupclose.fragments.SplashFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="#33ffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:text="SportsUpClose helps you find your local sporting places. You must allow GPS location for this application to run correctly. Have fun at your event! Press Go!!"/>

    <LinearLayout
        android:id="@+id/mLlayoutBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="50dp"
            android:text="GO" />

    </LinearLayout>

</LinearLayout>
